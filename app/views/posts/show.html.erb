<h1 class="post-title"><%= @post.post_title %></h1>
<div class="post-date"><%= time_ago_in_words @post.post_date %> ago</div>
<div class="post-author"><%= link_to @post.user.display_name, user_posts_url(@post.user) %></div>

<div class="post-body"><%= @post.post_content %></div>

<% if @post.comment_count %>
<div class="post-comments">
	<h2><%= pluralize @post.comment_count, "Comment" %></h2>
	<% @post.comments.each do |comment| %>
		<%= render :partial => "posts/comment", :locals => {:comment => comment}%>
	<% end %>
</div>
<% end %>